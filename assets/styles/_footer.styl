footer
  margin 80px 0 80px 0

  h3, ul.links
    margin-left 20px
    @media only screen and (max-width: mobileMaxWidth)
      margin-left 0

  h3
    line-height 2
    border-bottom 1px solid greigh6

  ul.links
    @extend .vanilla-list
    li
      line-height 2
      margin 0
      padding 0
      display block
      a
        font-weight 600
        text-decoration none
        &:hover
          text-decoration underline

  .cobrand-footer
    background greigh6
    padding 0.5em
    display table
    width 100%
    text-align: center

    > :first-child
      text-align left

    > *
      display table-cell

    > :last-child
      text-align right

    #npm-expansions
      font-weight bold


#npm-loves-you
  margin-top 80px
  display inline-block
  color greigh4
  text-decoration none
  position relative
  &:before, &:after
    content "\2665"
    color rgba(npmred, 0)
    font-size 14px
    transition all 0.3s
    transform translate3d(0,0,0)
    position absolute
    top 1px
  &:before
    left -10px
  &:after
    right -10px
  &:hover
    color rgba(npmred, 1)
    &:before, &:after
      color rgba(npmred, 1)
    &:before
      left -15px
    &:after
      right -15px
