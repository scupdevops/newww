.inset
  position relative
  padding 35px
  box-shadow 0 2px 15px #A5B3AA
  h3
    color text-color
    font-size .75em
    padding-top 0
    text-transform uppercase
  li
    color #A5B3AA
    font-size .875em
    margin-top 1em

    &:first-child
      margin-top 0

    span
      color text-color

  &.bottom-img
    padding-bottom 150px

  .wombat-construction
    position absolute
    width 210px
    height 210px
    bottom 0px
    left 0px
    background-image url("/static/images/wombat-construction.svg")
    background-position -50px 50px
    background-repeat no-repeat
